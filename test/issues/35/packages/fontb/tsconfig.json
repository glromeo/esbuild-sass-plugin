{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "build"]
}
